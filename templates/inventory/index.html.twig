{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('app_inventory.create') }}">
        <div class="d-grid gap-2 mb-3">
            <button class="btn btn-primary" type="button">Dodaj</button>
        </div>
    </a>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Desc</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>
                        <a href="{{ path('app_inventory.show', {id: post.id}) }}">{{ post.title }}</a>
                    </td>
                    <td>{{ post.description }}</td>
                    <td>
                        <a class="text-danger" href="{{ path('app_inventory.delete', {id: post.id}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
